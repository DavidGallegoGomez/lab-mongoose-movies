<h2>Movies List: </h2>
<ul>
  {{#each movies as |movie|}}
    <li><a href="/movies/{{ movie.id }}">{{movie.title}}</a></li>

    <a href="/movies/{{ movie.id }}/edit" class="btn btn-primary mr-3" tabindex="-1" role="button" aria-disabled="true">Edit Movie</a>
    <form action="/movies/{{ movie.id }}/delete" method="POST">
      <div class="d-flex">
        <button type="submit" class="btn btn-danger mr-3">Delete</button>
      </div>
    </form>
  {{/each}}
</ul>
<a href="/movies/new" class="btn btn-secondary mr-3" tabindex="-1" role="button" aria-disabled="true">New Movie</a>
